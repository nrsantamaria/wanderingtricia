<%= render('layouts/errors', :object => @review) %>

<%= form_for [@image, @review] do |f| %>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :review %>
    <%= f.text_area :content_body, {class: "form-control"} %>
  </div>
  <br>
  <p><%= f.submit nil, {class: "btn btn-default"} %></p>
<% end %>
